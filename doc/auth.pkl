amends "@openapi/Document.pkl"

import "@openapi/Schema.pkl"

import "../CommonComponents.pkl"

import "../AppRoleAuthOpenApi.pkl" as AppRoleAuth
import "../TokenAuthOpenApi.pkl" as TokenAuth

info {
  title = "Vault Courier Authentication API"
  description = "Supported Authentication Methods for interacting with Hashicorp Vault and OpenBao"
  version = "0.2.0"
  license {
    name = "Apache License 2.0"
  }
}

servers {
  new { 
    url = "https://127.0.0.1:8200/v1"
    description = "Default https server url"
  }
}

tags {
  new {
    name = "approle"
  }
  new {
    name = "token"
  }
}

paths {
  ...AppRoleAuth.paths
  ...TokenAuth.paths
}

components {
  parameters {
    ...CommonComponents.parameters
  }
  schemas {
    ...AppRoleAuth.appRoleComponents.schemas

    ...TokenAuth.tokenComponents.schemas

    ...CommonComponents.schemas
  }
}
