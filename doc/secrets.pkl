amends "@openapi/Document.pkl"

import "@openapi/Schema.pkl"

import "../CommonComponents.pkl"

import "../SecretEngines/KeyValue/KeyValueEngineOpenApi.pkl" as KeyValue
import "../SecretEngines/Databases/PostgresSQL/DatabaseEngineOpenApi.pkl" as Database

info {
  title = "Vault Courier Secret Engines API"
  description = "API client for Hashicorp Vault and OpenBao"
  version = "0.2.0"
  license {
    name = "Apache License 2.0"
  }
}

servers {
  new { 
    url = "https://127.0.0.1:8200/v1"
    description = "Default https server url"
  }
}

tags {
  new {
    name = "database/postgres"
  }
  new {
    name = "key-value"
  }
}

paths {
  ...KeyValue.paths
  ...Database.paths
}

components {
  parameters {
    ...CommonComponents.parameters
  }
  schemas {
    ...KeyValue.kvComponents.schemas
    ...Database.databaseComponents.schemas

    ...CommonComponents.schemas
  }
}
