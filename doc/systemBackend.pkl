amends "@openapi/Document.pkl"

import "@openapi/Schema.pkl"

import "../CommonComponents.pkl"

import "../SysWrappingOpenApi.pkl" as Wrapping
import "../SysAuthOpenApi.pkl" as Auth
import "../SysPoliciesOpenApi.pkl" as PoliciesACL
import "../SysMountsOpenApi.pkl" as Mounts

info {
  title = "Vault Courier Authentication API"
  description = "API client for Hashicorp Vault and OpenBao"
  version = "0.2.0"
  license {
    name = "Apache License 2.0"
  }
}

servers {
  new { 
    url = "https://127.0.0.1:8200/v1"
    description = "Default https server url"
  }
}

tags {
  new {
    name = "policies"
  }
  new {
    name = "wrapping"
  }
}

paths {
  ...Wrapping.paths
  ...Auth.paths
  ...PoliciesACL.paths
  ...Mounts.paths
}

components {
  parameters {
    ...CommonComponents.parameters
  }
  schemas {
    ...Auth.authComponents.schemas
    ...PoliciesACL.policyComponents.schemas
    ...Mounts.mountComponents.schemas
    ...CommonComponents.schemas
  }
}
